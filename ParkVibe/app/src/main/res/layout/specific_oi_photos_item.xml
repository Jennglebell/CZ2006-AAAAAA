<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/oiphotos_specificphoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_launcher_background" />

            <ImageButton
                android:id="@+id/deleteImage"
                android:background="@drawable/cross"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/oiphotos_specificphoto"
                android:layout_alignRight="@+id/oiphotos_specificphoto"
                android:onClick="delete_photo"
                tools:srcCompat="@android:drawable/btn_dialog" />

            <ImageButton
                android:id="@+id/like"
                android:layout_width="10pt"
                android:layout_height="10pt"
                android:layout_alignLeft="@+id/oiphotos_specificphoto"
                android:layout_alignBottom="@+id/oiphotos_specificphoto"
                android:background="@drawable/like"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="0dp"
                android:onClick="like" />
            <!--tools:srcCompat="@android:drawable/ic_menu_close_clear_cancel"-->
            <TextView
                android:id="@+id/like_num"
                android:text="0"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/like"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="-2dp"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>